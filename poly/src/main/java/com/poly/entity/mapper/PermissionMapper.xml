<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.poly.sys.dao.IPermissionDao">
  
  <resultMap extends="com.poly.entity.BaseBean.baseMap" id="permissionMap" type="Permission">
    <id column="PERMISSION_ID" property="permissionId" jdbcType="INTEGER" />
    <result column="PERMISSION_STRING" property="permissionString" jdbcType="VARCHAR" />
    <result column="ROLE_CODE" property="roleCode" jdbcType="VARCHAR" />
  </resultMap>
  
  <sql id="role_colomn" >
    PERMISSION_ID,PERMISSION_STRING,ROLE_CODE,
    <include refid="com.poly.entity.BaseBean.basebean_colomn" />
  </sql>
  
  <!-- 根据账户查询拥有的权限 -->
  <select id="findPermissionsByAccount" resultType="string" parameterType="string" >
    SELECT PERMISSION_STRING FROM SEMS_PERMISSION p INNER JOIN sems_user_role ur 
ON p.role_code = ur.role_code AND ur.user_account = #{account,jdbcType=VARCHAR}
  </select>
  
</mapper>